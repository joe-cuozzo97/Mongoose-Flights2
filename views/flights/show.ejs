<body>
  
    <section>
        <div>Airline: <%= flight.airline %></div>
        <div>Airport: <%= flight.airport %></div>
        <div>Flight Number: <%= flight.flightNo %></div>
        <div>Departs: <%= flight.departs %></div>
    </section>
    <form action="/flights" method="POST">
    <label>Destination Airport:
        <select name="Destination airport">
            <option value="AUS">AUS</option>
            <option value="DFW">DFW</option>
            <option value="DEN">DEN</option>
            <option value="LAX">LAX</option>
            <option value="SAN">SAN</option>
        </select>
    <label>Arrival time:
        <input type="datetime-local" name="departs">
    </label>
</label>
<input type="submit" value="add to destination">
</form>

        
        
