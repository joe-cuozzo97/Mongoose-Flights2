<!DOCTYPE html>
<html lang="en">
<head>
  <nav>
    <a href="/flights">All Flights</a>
    <a href="/flights/new">Add New Flight</a>
  </nav>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>
<body>

    <table id="list">
        <thead>
          <tr>
            <th>Flights!</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% flights.forEach(function(f) { %>
            <tr>
              <td>
                <%= f.airport %>
              </td>
              <td>
                <%= f.airline %>
              </td>
              <td>
                <%= f.flightNo %>
              </td>
              <td>
                <%= f.departs %>
              </td>
              <td><a href="/flights/show <%= f._id %>">DETAILS</a></td>
            </tr>
            <% }); %>
        </tbody>
      </table>

    </body>
    </html>
